#!/bin/bash

python ./scripts/escape_parenthesis.py ../${1}.conllx  > ../${1}.conllx.escaped

echo "DONE 1"

java -jar -Dfile.encoding=utf-8  ./scripts/disconverter.jar deconv ../${1}.conllx.escaped ../${1}.pbt

echo "DONE 2"

java -jar -Dfile.encoding=utf-8 ./scripts/trees2export.jar  ../${1}.pbt  $3


echo "DONE 3"

discodop eval ../$2.export  ../${1}.pbt.export  ./disco-dop/proper.prm
